<div class="container">
    <div class="flex-container">
    <h1 data-behavior="title">Task List Manager</h1>
    <p>
        <label for="new-task">Add Item</label>

        <div class="input-group">
          <input maxlength="25" id="new-task" type="text" class="form-control" placeholder="Enter your item here...">
          <span class="input-group-btn">
            <button class="btn btn-secondary addButton" type="button" >Add</button>
          </span>
        </div>
    </p>
    <h3>Todo</h3>
    <ul class="list-group" id="incomplete-tasks">
      <li class="list-group-item"><input type="checkbox">
          <label>Pay Bills</label><input type="text">
          <button class="btn btn-secondary btn-sm edit">Edit</button>
          <button class="btn btn-secondary btn-sm delete">Delete</button></li>
      <li class="list-group-item"><input type="checkbox">
          <label>Go Shopping</label><input type="text" value="Go Shopping">
          <button class="btn btn-secondary btn-sm edit">Edit</button>
          <button class="btn btn-secondary btn-sm delete">Delete</button></li>
    </ul>

    <h3>Completed</h3>
    <ul class="list-group" id="completed-tasks">
      <li class="list-group-item"><input type="checkbox" checked>
            <label>See the Doctor</label><input type="text">
            <button class="edit btn btn-secondary btn-sm">Edit</button>
            <button class="delete btn btn-secondary btn-sm">Delete</button></li>
    </ul>
</div>
</div>
